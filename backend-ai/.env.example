# Azure Keys - Get these from Azure Portal
AZURE_VISION_ENDPOINT=https://<your-region>.api.cognitive.microsoft.com/
AZURE_VISION_KEY=<your-vision-api-key>

AZURE_OPENAI_ENDPOINT=https://<your-deployment>.openai.azure.com/
AZURE_OPENAI_KEY=<your-openai-api-key>
AZURE_OPENAI_MODEL=gpt-4

AZURE_SPEECH_KEY=<your-speech-api-key>
AZURE_SPEECH_REGION=<your-region>

# Microsoft Fabric
FABRIC_WORKSPACE_ID=<your-workspace-id>
FABRIC_LAKEHOUSE_ID=<your-lakehouse-id>

# App Config
ENVIRONMENT=development
DEBUG=True
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]
